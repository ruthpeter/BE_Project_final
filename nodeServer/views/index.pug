extends ./layout
append styles
    link(href='/css/index.css', rel='stylesheet')
append scripts
    script(src='/js/main.js')
    script(src='https://cdn.plot.ly/plotly-latest.min.js')

append body
    .big-container
        .container-flex
            .left-unit
                div#mapId
            .spacer
                span= " "
            .right-unit
                +panel-primary("Options")
                    .options-panel
                        .PureMapOptions
                            div.addPadding
                                .cb-section.LatLonJump
                                    .cb-flex.cb-flex-row
                                        .spacer
                                        +a-btn-success("#") Jump to Lat/Lon
                                    .cb-flex.cb-flex-row
                                        +input("text","Lat","Lat","Latitude")
                                        +input("text","Long","Long","Longitude")
                                .cb-section.SetZoom
                                    .cb-flex.cb-flex-row
                                        .spacer-1
                                        span.cb-bold Zoom Level
                                    .cb-flex.cb-flex-row
                                        +input-simple("text","Zoom","Zoom","Zoom")
                                        +a-btn-success("#") Set Zoom
                                .cb-section#Layers
                                    span.cb-bold Layers
                                    div.layersSelection
                                        span#masks
                                            +label-default("Masks")
                                        span#paths
                                            +label-default("Paths")
                        .DataSetCreationOptions
                            div.killMargin
                                div.maskDrawTool
                                    h5 Mask Draw Tools
                                    +radio-toggle-primary("DrawShapeType",[{caption: "PolyLine"}, {caption: "Circle"}, {caption: "Square"}],1)
                                hr.darkerblue
                                div.iconTool
                                    h5 Place Icons
                                    +radio-toggle-primary("IconType",[{caption: "Buildings"}, {caption: "Forestry"}, {caption: "Waterbody"}],1)

                a.btn.btn-primary(onclick='imageDisplay()', style='margin-left: 1px;') Display Segmentation
                a.btn.btn-success(onclick='graphDisplay()') Display Analysis
                a.btn.btn-primary(onclick='textDisplay()') Final Result 
                p
                img(id="bigpic" , style='margin-left: auto ; margin-right: auto;')
                p
                div(id="graph" style="width:500px;height:250px; display:none;")
                p
                div(id="text" style="display:none;") 
                    h4 From above we can see:
                        h5 
                            ul
                                li 5% decrease in forestation
                                li 6% increase in urbanization
                        h5  We must contact officials to alert them about the same

               
            

        #temp
        +tab-list(["PureMap", "DataSetCreation", "Result", "Messages", "Settings"],0)
            +tab("PureMap","active")
                #PureMapMarker
                h1 Map
            +tab("DataSetCreation")
                #DataSetCreationMarker
                h1 Create Dataset
                div#dataSetCreationMapTable
                    //+table-bordered(["#", "First Name", "Last Name", "Username"],[["1", "Mark", "Otto", "@mdo"], ["2", "Jacob", "Thornton", "@fat"], ["3", "Larry", "the Bird", "@twitter"]])
                    h4 Icons DataSet
                    ul.IconDataList
                        li No Icons added yet
            +tab("Result")
                #ProfileMarker
                h4 From above we can see:
                        h5 
                            ul
                                li 5% decrease in forestation
                                li 6% increase in urbanization
                        h5  We must contact officials to alert them about the same
            +tab("Messages")
                #MessagesMarker
                h1 Messages
                p This is Messages tab
            +tab("Settings")
                #SettingsMarker
                h1 Settings
                p This is Settings tab
    style.
        .layersSelection {
            margin:.5rem;
        }
        .layersSelection span{
            margin-right: .2rem;
            user-select: none;
            font-size: 1.2rem;
        }